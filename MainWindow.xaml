<Window x:Class="InstantMC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InstantMC - One-click Minecraft Launcher" 
        Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        MinHeight="350" MinWidth="400">
    <StackPanel Margin="20">
        <Label Content="Minecraft JAR:" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
            <TextBox x:Name="JarPathBox" Height="25" Width="280" Text="C:\path\to\minecraft.jar"/>
            <Button x:Name="BrowseBtn" Content="Browse" Width="70" Height="25" Margin="5,0,0,0" Click="BrowseBtn_Click"/>
        </StackPanel>
        
        <Label Content="Profile:" FontWeight="Bold" Margin="0,15,0,0"/>
        <ComboBox x:Name="ProfileDropdown" Height="25" Margin="0,5,0,0" SelectionChanged="ProfileDropdown_Changed"/>
        
        <Label Content="Username:" FontWeight="Bold" Margin="0,15,0,0"/>
        <TextBox x:Name="UsernameBox" Height="25" Margin="0,5,0,0"/>
        
        <Label Content="Server IP: (optional)" FontWeight="Bold" Margin="0,15,0,0"/>
        <TextBox x:Name="ServerIPBox" Height="25" Margin="0,5,0,0"/>
        
        <Label Content="Port:" FontWeight="Bold" Margin="0,15,0,0"/>
        <TextBox x:Name="ServerPortBox" Height="25" Margin="0,5,0,0" Text="25565"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
            <Button x:Name="SaveProfileBtn" Content="Save Profile" Width="110" Height="35" Click="SaveProfileBtn_Click"/>
            <Button x:Name="LaunchBtn" Content="Launch" Width="110" Height="35" Margin="15,0,0,0" Click="LaunchBtn_Click"/>
        </StackPanel>
    </StackPanel>
</Window>