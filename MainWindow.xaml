<Window x:Class="InstantMC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InstantMC Launcher" Height="600" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Play">
                <StackPanel Margin="10">
                    <GroupBox Header="Profile">
                        <StackPanel>
                            <ComboBox x:Name="ProfileDropdown" SelectionChanged="ProfileDropdown_Changed" Margin="5"/>
                            <Button x:Name="SaveProfileBtn" Content="Save Profile" Click="SaveProfileBtn_Click" Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <GroupBox Header="Game Version">
                        <StackPanel>
                            <ComboBox x:Name="VersionDropdown" SelectionChanged="VersionDropdown_Changed" Margin="5"/>
                            <Button x:Name="RefreshVersionsBtn" Content="Refresh Versions" Click="RefreshVersionsBtn_Click" Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <GroupBox Header="Settings">
                        <StackPanel>
                            <TextBox x:Name="UsernameBox" Text="Player" Margin="5"/>
                            <TextBox x:Name="ServerIPBox" Text="localhost" Margin="5"/>
                            <TextBox x:Name="ServerPortBox" Text="25565" Margin="5"/>
                            <TextBox x:Name="MinecraftDirBox" Text=".\.minecraft" Margin="5"/>
                            <Button x:Name="BrowseDirBtn" Content="Browse" Click="BrowseDirBtn_Click" Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <ProgressBar x:Name="DownloadProgress" Height="20" Visibility="Collapsed" Margin="5"/>
                    <TextBlock x:Name="DownloadStatus" Margin="5"/>
                    
                    <Button x:Name="DownloadBtn" Content="Download Game" Click="DownloadBtn_Click" Margin="5"/>
                    <Button x:Name="LaunchBtn" Content="Launch Game" Click="LaunchBtn_Click" Margin="5"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
